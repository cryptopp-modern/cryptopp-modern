{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Release",
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CRYPTOPP_BUILD_TESTING": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with testing enabled",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build with optimizations",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "Release with Debug Info",
      "description": "Release build with debug symbols",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "msvc",
      "displayName": "Visual Studio 2022",
      "description": "Build using Visual Studio 2022",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CRYPTOPP_BUILD_TESTING": "ON"
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "Visual Studio 2022 Debug",
      "description": "Debug build using Visual Studio 2022",
      "inherits": "msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "Visual Studio 2022 Release",
      "description": "Release build using Visual Studio 2022",
      "inherits": "msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ci-linux",
      "displayName": "CI Linux",
      "description": "Configuration for Linux CI builds",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CRYPTOPP_BUILD_TESTING": "ON"
      }
    },
    {
      "name": "ci-macos",
      "displayName": "CI macOS",
      "description": "Configuration for macOS CI builds",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CRYPTOPP_BUILD_TESTING": "ON"
      }
    },
    {
      "name": "ci-windows",
      "displayName": "CI Windows",
      "description": "Configuration for Windows CI builds",
      "inherits": "msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CRYPTOPP_BUILD_TESTING": "ON"
      }
    },
    {
      "name": "no-asm",
      "displayName": "No ASM",
      "description": "Build without assembly optimizations",
      "inherits": "default",
      "cacheVariables": {
        "CRYPTOPP_DISABLE_ASM": "ON"
      }
    },
    {
      "name": "install-test",
      "displayName": "Install Test",
      "description": "Build for testing installation",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "msvc",
      "configurePreset": "msvc",
      "configuration": "Release"
    },
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "msvc",
      "configurePreset": "msvc",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
